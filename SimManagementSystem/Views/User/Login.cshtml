@model SimManagementSystem.Models.UserViewModel

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_IdentityLayout.cshtml";
}
@using (Html.BeginForm("Login", "User", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div class="card-body">
        <p class="login-box-msg">Log in..</p>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="input-group mb-3">
                <input name="UserId" id="UserId" class="form-control" type="text" placeholder="Enter Employee ID..." /><br />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
                <div class="input-group-append">
                    <div class="input-group-text">
                        <span class="fas fa-user"></span>
                    </div>
                </div>
            </div>
            <div class="input-group mb-3">
                <input name="Password" id="Password" class="form-control" type="password" placeholder="Enter Employee Password..." /><br />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
                <div class="input-group-append">
                    <div class="input-group-text">
                        <span class="fas fa-lock"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-12 align-middle">
                    <button type="submit" class="btn btn-primary">Log in</button>
                </div>
                <!-- /.col -->
            </div>
        <p class="mt-3 mb-1">
            <a href="@Url.Action("ForgotPassword","User")">Forgot your password..?</a>
        </p>
    </div>
}







